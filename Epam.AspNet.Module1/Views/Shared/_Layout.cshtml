
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Module1 - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    <style>
        .disclaimer {
            color: gray;
            font-size: smaller
        }
    </style>
    <script src="~/jquery/jquery-3.4.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Categories", "Index", "Categories", null, new { @class="nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Products", "Index", "Products", null, new { @class="nav-link" })</li>
            </ul>
        </div>

    </nav>

    <div class="p-1">
      @RenderBody()
    </div>
    <hr />
    <p class="disclaimer">
        Disclaimer: this task was done in the style of minimalism. This is by intent. It was created from empty template, with no wizards or scaffolders.
        The absence of something does not indicate the lack of knowledge :)
    </p>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
