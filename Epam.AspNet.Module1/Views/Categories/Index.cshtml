@model List<Epam.AspNet.Module1.Models.Category>
@{
    ViewData["Title"] = "Categories";
}


<h1>Categories</h1>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    @foreach (var cat in Model)
    {
        <tr>
            <td>@cat.CategoryID</td>
            <td>@cat.CategoryName</td>
            <td>@cat.Description</td>
        </tr>
    }
</table>


